
<row class="row is-table-row" >

  <div class="col-sm-1 ">
    <%= link_to 'Create', new_benefit_path , class: "btn btn-success"%>
  </div>

  <div class="col-sm-2 ">
    <h4>Listing Benefits</h4>
  </div>

  <div class="col-sm-3">
    <%= search_form_for @q, class: 'search-form' do |f| %>
      <div class="input-group">
        <%= f.search_field :name_cont, class: 'form-control' %>
        <span class="input-group-btn">
          <button class="btn btn-primary">Search <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    <% end %>
  </div>

  <div class="col-sm-4 ">
    <%= paginate @benefits %>
  </div>
  
  <div class="col-sm-2 ">
    <%= page_entries_info @benefits, :entry_name => 'item' %>
  </div>
  
</row>


<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="1"></th>
            <th>Name</th>
      <th>Sort order</th>
      <th>Active status</th>
      <th>Comment</th>
    </tr>
  </thead>

  <tbody>
    <% @benefits.each do |benefit| %>
      <tr>
        <td>
          <div class="btn-group">
          <%= link_to 'Show', benefit, class: "btn btn-info", :style=>'color:#FFFFFF;' %>
          <%= link_to 'Edit', edit_benefit_path(benefit), class: "btn btn-primary", :style=>'color:#FFFFFF;' %>
          <% #commentedout  = link_to 'Destroy', benefit, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-warning", :style=>'color:#FFFFFF;' %>
          </div>
        </td>
        
        <td><%= benefit.name %></td>
        <td><%= benefit.sort_order %></td>
        <td><%= benefit.active_status %></td>
        <td><%= benefit.comment %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
