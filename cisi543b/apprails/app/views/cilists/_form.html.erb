
<%= form_for(@cilist, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @cilist.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@cilist.errors.count, "error") %> prohibited this cilist from being saved:</h4>
      <ul>
      <% @cilist.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group">
            <%= f.label :cell_or_location, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.text_field :cell_or_location, class: "form-control" , required: true %>
      </div>
        </div>

  <div class="form-group">
            <%= f.label :benefit_id, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= f.collection_select :benefit_id, Benefit.all, :id, :name,  { prompt: true }, { :class => 'dgselect2', required: true }  %>
        </div>
    </div>
  <div class="form-group">
            <%= f.label :current_state, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.text_area :current_state, class: "form-control", required: 'true' %>
      </div>
        </div>

        <div class="form-group">
            <%= f.label :improvement_suggestion, class: "col-sm-2 control-label" %>
        <div class="col-sm-10">
        <%= f.text_area :improvement_suggestion, class: "form-control", required: 'true' %>
      </div>
        </div>




  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
